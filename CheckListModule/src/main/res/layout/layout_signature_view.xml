<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="4dp"
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/questionIdTxt"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:gravity="end"
                    android:textAlignment="textEnd"
                    android:text="1 . "
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="start"
                    android:textAlignment="textStart"
                    android:id="@+id/titleText"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title Radio Titlee Radio Title Radio Title Radio Title Radio Title Radio Title Radio Titlee Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title v Radio Title Radio Title"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



            <TextView
                android:textSize="13sp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:textColor="#FF2222"
                android:textStyle="italic"
                android:text="@string/signatureGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/signatureImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>