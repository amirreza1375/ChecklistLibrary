<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/questionIdTxt"
            android:textSize="16sp"
            android:textColor="#000"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:text="1 . "
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="start"
            android:textAlignment="textStart"
            android:id="@+id/titleText"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title Radio Titlee Radio Title Radio Title Radio Title Radio Title Radio Title Radio Titlee Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title v Radio Title Radio Title"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <RatingBar
        android:id="@+id/ratingBar"
        android:stepSize="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>