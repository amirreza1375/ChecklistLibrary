<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/back_main"
    android:layout_height="match_parent"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/titleHolder"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/questionIdTxt"
            android:textSize="16sp"
            android:textColor="@color/opisite_text"
            android:gravity="end"
            android:textAlignment="textEnd"
            tools:text="1 . "
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="start"
            android:textAlignment="textStart"
            android:id="@+id/titleText"
            android:textSize="16sp"
            android:textColor="@color/opisite_text"
            android:textStyle="bold"
            android:text="Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title Radio Titlee Radio Title Radio Title Radio Title Radio Title Radio Title Radio Titlee Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title v Radio Title Radio Title"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="8dp"
        android:background="#ACA7FF"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/scannerView"
        app:layout_constraintTop_toBottomOf="@id/titleHolder"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </LinearLayout>


    <TextView
        android:textStyle="bold"
        android:padding="8dp"
        android:background="@drawable/barcode_result_back"
        android:layout_marginTop="8dp"
        android:text=" Result : 23154236346 \n Format : jpg"
        android:id="@+id/resultTxt"
        android:textColor="@color/opisite_text"
        app:layout_constraintTop_toBottomOf="@id/scannerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="8dp"
        android:textColor="@color/opisite_text"
        android:background="@drawable/new_btn_back"
        android:text="@string/scan"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/resultTxt"
        android:id="@+id/scanBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>