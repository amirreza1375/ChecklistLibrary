<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_marginTop="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@color/back_main"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/questionIdTxt"
            android:textSize="16sp"
            android:textColor="@color/opisite_text"
            android:gravity="end"
            android:textAlignment="textEnd"
            tools:text="1 . "
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="start"
            android:textAlignment="textStart"
            android:id="@+id/titleText"
            android:textSize="16sp"
            android:textColor="@color/opisite_text"
            android:textStyle="bold"
            android:text="Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title Radio Titlee Radio Title Radio Title Radio Title Radio Title Radio Title Radio Titlee Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title Radio Title v Radio Title Radio Title"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <LinearLayout
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/dollarSign"
            android:textColor="@color/opisite_text"
            android:textSize="15sp"
            android:text="$"
            android:layout_weight="0.05"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:hint="Escriba aquÃ­"
            android:background="@null"
            android:paddingStart="4dp"
            android:textColor="@color/opisite_text"
            android:textColorHint="@color/hint_text"
            android:paddingEnd="4dp"
            android:id="@+id/commentEdt"
            android:minHeight="42dp"
            android:layout_weight="0.95"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/hint_text"
            android:text="@string/max_length_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/hint_text"
            android:id="@+id/maxLengthTxt"
            android:text="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>